# App
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# MongoDB
MONGODB_URI_DEV=mongodb://localhost:27017/orbit-hub-dev
MONGODB_URI_PROD=mongodb://localhost:27017/orbit-hub-prod
MONGODB_URI=mongodb://localhost:27017/orbit-hub

# JWT
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Socket.io
SOCKET_PATH=/socket.io

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password

# Cron Jobs
TODO_CLEANUP_CRON=0 3 * * *

# Others
CORS_ORIGIN=http://localhost:3000

# Nodemailer (Email Service)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM="Orbit Hub" <no-reply@orbit-hub.com>
