{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "express"]
    // "ignoreDeprecations": "6.0"
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}
